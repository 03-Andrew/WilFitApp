<UserControl x:Class="WilFitApp.Content.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WilFitApp.Content"
             mc:Ignorable="d" 
             Height="150" Width="150">
    <Grid>
        <Ellipse Stroke="LightGray" StrokeThickness="10" Width="150" Height="150"/>
        <Ellipse Stroke="DodgerBlue" StrokeThickness="10" Width="150" Height="150">
            <Ellipse.Clip>
                <EllipseGeometry Center="75,75" RadiusX="70" RadiusY="70"/>
            </Ellipse.Clip>
        </Ellipse>
        <TextBlock Text="{Binding Path=Value}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</UserControl>
